@import "~/.config/rofi/shared.rasi"

window {
	location: center;
	width: 550;
}

inputbar {
	children: [ entry ];
	padding: 17px 18px;
	border: 0 0 1px;
	border-color: @border;
}

// entry, element-text {
//   vertical-align: 0.5;
