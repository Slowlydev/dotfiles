entry {
	placeholder: "Search";
}

listview {
	lines: 5;
}

element {
	children: [ element-text ];
	// orientation: horizontal;
	padding: 17px 18px;
	background-color: transparent;
}

element selected normal, element selected active {
	background-color: @background-secondary;
}

element-text {
	background-color: transparent;
}